    enabled: false

agent:
  host: nexus1-dev.symphony.com

session_auth:
  host: sym-nexus1-dev-chat-glb-2-guse1-all.symphony.com
  port: 8444

key_auth:
  host: sym-nexus1-dev-chat-glb-2-guse1-all.symphony.com
  port: 8444

pod:
  host: nexus1-dev.symphony.com

helpdesk-bot:
  host: localhost.symphony.com
  port: 8090

helpdesk-service:
  host: localhost.symphony.com
  port: 8081

app-authentication:
  enabled: false
  pod:
    host: ${pod.host}
    port: ${pod.port:443}
